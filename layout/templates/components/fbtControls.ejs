  %>
    <div class="fbt-skip fbt-button px-2">
      Trocar 
      <span class="octicon octicon-sync"></span> 
    </div>
  <% 
  }
  if (fbtControls.remove === true) {
  %>
    <div class="fbt-remove fbt-button px-2">
